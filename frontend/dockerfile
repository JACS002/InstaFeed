FROM node:20-alpine AS build

# Directorio de trabajo dentro del contenedor
WORKDIR /app

# Copia package.json y package-lock.json para instalar dependencias
COPY package*.json ./

# Instala dependencias
RUN npm install

# Copia todo el c칩digo
COPY . .

# Construye la app para producci칩n
RUN npm run build

# Usa Nginx para servir la app est치tica
FROM nginx:alpine

# Copia el build a la carpeta de Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Copia configuraci칩n de Nginx si quieres personalizar (opcional)
# COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponemos el puerto 80
EXPOSE 80

# Comando por defecto para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]
